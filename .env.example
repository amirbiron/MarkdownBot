# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Server Configuration (for Render.com deployment)
PORT=3000

# Data Directory Configuration
# For Render.com persistent disk: Set this to your mounted disk path (e.g., /opt/render/project/data)
# For local development: Leave empty (defaults to ./data)
DATA_DIR=

# Database Configuration (optional - overrides DATA_DIR/users.db)
# DATABASE_PATH=./database/users.db

# Sandbox Configuration
SANDBOX_ENABLED=true
MAX_RENDERS_PER_MINUTE=5
RENDER_TIMEOUT=10000

# Bot Settings
DEFAULT_LANGUAGE=he
DAILY_LESSON_TIME=09:00
